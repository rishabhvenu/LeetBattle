# LeetBattle Client Environment Variables
# Copy this file to .env.local and fill in your own values

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/codeclashers

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters-long

# Application Configuration
NODE_ENV=development

# MinIO/S3 Configuration (for browser uploads)
NEXT_PUBLIC_PFP_BUCKET_URL=http://localhost:9000/codeclashers-avatars/
NEXT_PUBLIC_SERVER_URL=http://localhost:3001
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# Colyseus (Matchmaking/Rooms)
NEXT_PUBLIC_COLYSEUS_HTTP_URL=http://localhost:2567
NEXT_PUBLIC_COLYSEUS_WS_URL=ws://localhost:2567

# MinIO Credentials (for server-side use)
# Must match backend/.env values
S3_ENDPOINT=http://localhost:9000
AWS_ACCESS_KEY_ID=your_minio_username
AWS_SECRET_ACCESS_KEY=your_secure_password
S3_BUCKET_NAME=codeclashers-avatars
AWS_REGION=us-east-1

# Redis (must match backend/.env)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# OpenAI (optional - for AI features)
OPENAI_API_KEY=

