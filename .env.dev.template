# Development Environment Configuration
# Copy this file to .env.dev and fill in your values
# These variables match GitHub Secrets/Variables used in production

# ===================================================================
# REQUIRED: Core Secrets
# ===================================================================

# Redis password for authentication
REDIS_PASSWORD=dev_redis_password_123

# MongoDB connection string
# Format: mongodb://username:password@host:port/database?authSource=admin
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/codeclashers?authSource=admin

# MongoDB credentials (extracted from URI if not set)
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin123

# Internal service authentication secrets
INTERNAL_SERVICE_SECRET=dev_internal_secret_key
BOT_SERVICE_SECRET=dev_bot_secret_key
COLYSEUS_RESERVATION_SECRET=dev_colyseus_secret_key

# Judge0 PostgreSQL credentials
JUDGE0_POSTGRES_USER=judge0
JUDGE0_POSTGRES_PASSWORD=judge0_dev_password_456
JUDGE0_POSTGRES_DB=judge0

# OpenAI API Key (for bot generation and complexity analysis)
OPENAI_API_KEY=sk-your-openai-key-here

# ===================================================================
# OPTIONAL: AWS/S3 Configuration (dev uses MinIO)
# ===================================================================

# For dev, MinIO is used instead of AWS S3
# Leave these empty or set to MinIO values
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=codeclashers-avatars
AWS_REGION=us-east-1
S3_ENDPOINT=http://minio:9000

# ===================================================================
# OPTIONAL: Service Ports and Hosts
# ===================================================================

REDIS_HOST=redis
REDIS_PORT=6379
MONGODB_HOST=mongodb
MONGODB_PORT=27017
JUDGE0_HOST=judge0-server
JUDGE0_PORT=2358
COLYSEUS_HOST=colyseus
COLYSEUS_PORT=2567

# ===================================================================
# OPTIONAL: Image Registry Configuration
# ===================================================================

# For dev, use local images
IMAGE_REGISTRY=local
IMAGE_TAG=dev

# For testing GHCR pushes, set these:
# IMAGE_REGISTRY=ghcr.io/rishabhvenu
# GHCR_PAT=ghp_your_github_personal_access_token
# GHCR_USERNAME=your-github-username

# ===================================================================
# OPTIONAL: Frontend Configuration (for testing)
# ===================================================================

NEXT_PUBLIC_API_BASE=http://localhost:2567
NEXT_PUBLIC_COLYSEUS_HTTP_URL=http://localhost:2567
NEXT_PUBLIC_COLYSEUS_WS_URL=ws://localhost:2567
NEXTAUTH_SECRET=dev_nextauth_secret_random_string
NEXTAUTH_URL=http://localhost:3000

# ===================================================================
# OPTIONAL: Resource Limits (defaults are fine for dev)
# ===================================================================

K8S_COLYSEUS_REPLICAS=1
K8S_BOTS_REPLICAS=1
K8S_JUDGE0_SERVER_REPLICAS=1
K8S_JUDGE0_WORKER_REPLICAS=1

